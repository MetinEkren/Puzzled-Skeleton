<UserControl x:Class="Puzzled.WinMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- Win text -->
            <TextBlock Text="You have won!"
                FontSize="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="White"
                Margin="0,64,0,0" />

            <!-- Next level -->
            <Button x:Name="SaveSlot2" Width="300" Height="50"
                Content="Save &amp; Continue"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="NextLevelPressed" Margin="407,295,0,0"/>

            <!-- Back to main menu -->
            <Button  Width="300" Height="50"
                Content="Save &amp; Exit"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="BackToMainMenu" Margin="407,360,0,0"/>
            
            <!-- Restart Game -->
            <Button  Width="300" Height="50"
                Content="Restart Level"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                Foreground="Black"
                BorderBrush="Blue"
                BorderThickness="2"
                Background="White"
                Click="RestartGame" Margin="407,425,0,0"/>

            <!-- Score board -->
            <Grid Width="300" Height="300" Margin="64,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Border BorderBrush="Blue" BorderThickness="2" Background="White" CornerRadius="10"/>
                <StackPanel Margin="14">
                    <TextBlock Text="Leaderboard" FontSize="32" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <!-- Koptekst -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Name:" FontSize="25" Grid.Column="0"/>
                        <TextBlock Text="Times:" FontSize="25" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Rij 1 -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="PlayerName1" FontSize="25" Grid.Column="0" Text="-" />
                        <TextBlock x:Name="PlayerScore1" FontSize="25" Grid.Column="1" Text="-" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Rij 2 -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="PlayerName2" FontSize="25" Grid.Column="0" Text="-" />
                        <TextBlock x:Name="PlayerScore2" FontSize="25" Grid.Column="1" Text="-" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- Rij 3 -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="PlayerName3" FontSize="25" Grid.Column="0" Text="-" />
                        <TextBlock x:Name="PlayerScore3" FontSize="25" Grid.Column="1" Text="-" HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
