<UserControl x:Class="Puzzled.LevelOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>
            
            <!-- Score text -->
            <Label x:Name="StopwatchLabel" Content="00:00" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="38" Height="65" Width="210" FontFamily="Courier New" Margin="10,0,0,0"/>

        </Grid>

        <ContentControl x:Name="PauseOverlay" FontFamily="Courier New"/>
    </Grid>
</UserControl>
