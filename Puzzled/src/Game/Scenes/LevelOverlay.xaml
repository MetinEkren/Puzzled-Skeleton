<UserControl x:Class="Puzzled.LevelOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- Score text -->
            <TextBlock x:Name="Score" Text="Score: NULL"
                FontSize="38"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White" Margin="10,0,0,0" />
        </Grid>

        <ContentControl x:Name="PauseOverlay"/>
    </Grid>
</UserControl>
