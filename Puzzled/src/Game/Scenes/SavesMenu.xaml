<UserControl x:Class="Puzzled.SavesMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black"/>

            <!-- UI Canvas for UI elements -->
            <Canvas x:Name="UICanvas" Background="Transparent"/>

            <!-- UI buttons -->
            <Image x:Name="BackButton" Width="48" Height="48" Margin="0,0,702,656 "
                Source="pack://application:,,,/Resources/Textures/back_button.png"
                MouseDown="BackButtonPressed"/>
            <Image x:Name="SaveButton1" Width="189" Height="96" Margin="66,538,513,86"
                Source="pack://application:,,,/Resources/Textures/save1.png"
                MouseDown="SaveSlot1Pressed"
                MouseEnter="SaveSlot1StartHover"
                MouseLeave="SaveSlot1StopHover"
                Opacity="100"/>
            <Image x:Name="SaveButton2" Width="189" Height="96" Margin="290,538,290,86"
                Source="pack://application:,,,/Resources/Textures/save2.png"
                MouseDown="SaveSlot2Pressed"
                MouseEnter="SaveSlot2StartHover"
                MouseLeave="SaveSlot2StopHover"/>
            <Image x:Name="SaveButton3" Width="189" Height="96" Margin="510,538,69,86"
                Source="pack://application:,,,/Resources/Textures/save3.png"
                MouseDown="SaveSlot3Pressed"
                MouseEnter="SaveSlot3StartHover"
                MouseLeave="SaveSlot3StopHover"/>
            
            <!-- Hover save buttons -->
            <Image x:Name="SaveButton1Hover" Width="189" Height="96" Margin="0,0,702,656 "
               Source="pack://application,,,/Resources/Textures/save1_hover.png"
               Opacity="0"/>
            <Image x:Name="SaveButton2Hover" Width="189" Height="96" Margin="290,538,290,86"
               Source="pack://application,,,/Resources/Textures/save2_hover.png"
               Opacity="0"/>
            <Image x:Name="SaveButton3Hover" Width="189" Height="96" Margin="510,538,69,86"
               Source="pack://application,,,/Resources/Textures/save3_hover.png"
               Opacity="100"/>


            <Image x:Name="PixelArt" Width="450" Height="330" Margin="152,84,166,306"
                Source="pack://application:,,,/Resources/Textures/save_pixelart.png"/>



        </Grid>
    </Grid>
</UserControl>
