<UserControl x:Class="Puzzled.LevelOverlay_Pauze"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid Width="768" Height="720">

        <Grid Width="600" Height="600" Margin="0,0,0,0" AutomationProperties.Name="PauzeMenuGrid" >

            <Rectangle Height="500" Width="600" Fill="White" Canvas.Left="141" Stroke="White" Canvas.Top="126" RadiusX="26.5" RadiusY="26.5"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Pause" VerticalAlignment="Top" FontSize="36" AutomationProperties.Name="Textblock_pauze" Margin="0,70,0,0"/>
            <Button Content="X" HorizontalAlignment="Right" Height="50" Width="50" VerticalAlignment="Top" AutomationProperties.Name="button_Resume" FontSize="24" Margin="0,49.5,0,0" Click="Button_Click_Close">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0,20,0,0">

                            <!-- Only top-right corner curved -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Grid HorizontalAlignment="Center" Height="290" Margin="0,180,0,0" VerticalAlignment="Top">
                <Button Content="Resume" HorizontalAlignment="Center" Height="50" Width="400" VerticalAlignment="Top" AutomationProperties.Name="button_Resume" FontSize="24" Click="Button_Click_Close" />
                <Button Content="Options" HorizontalAlignment="Center" Height="50" Width="400" Margin="0,80,0,0" VerticalAlignment="Top" AutomationProperties.Name="button_Options" FontSize="24" Click="Button_Click_OptionsMenu" />
                <Button Content="Restart" HorizontalAlignment="Center" Height="50" Width="400" Margin="0,160,0,0" VerticalAlignment="Top" AutomationProperties.Name="button_Restart" FontSize="24" Click="Button_Click_Restart" />
                <Button Content="Quit" HorizontalAlignment="Center" Height="50" Width="400" Margin="0,240,0,0" VerticalAlignment="Top" AutomationProperties.Name="button_Quit" FontSize="24" Click="Button_Click_Quit" />
            </Grid>

        </Grid>

    </Grid>
</UserControl>